<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
			<div id="error_explanation">
	 		<% if @user.errors.any? %>
    	<h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
    	<ul>
    		<% if @user.errors.include?(:name) %>
       		<li>
        		<%= @user.errors.full_messages_for(:name).first %>
      		<% end %>
       		</li>
     		<% if @user.errors.include?(:introduction) %>
    		<li>
       			<%= @user.errors.full_messages_for(:introduction).first %>
      		<% end %>
        	</li>
    	</ul>
    	<% end %>
  	</div>
			<h2>User info</h2>
			<%= form_with model: @user, local:true do |f| %>
			<div class="form-group">
				<label for="userName">Name</label></br>
			 	<%= f.text_field :name, autofocus: true, class:"formControl name", id:"userName" %>
			</div>

			<div class="form-group">
  			<label for="inputImage">Image</label></br>
  			<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"formControl-fila userImage", id:"user_profile_image" %>
  		</div>

  		<div class="form-group">
  			<label for="user_introduction">Introduction</label></br>
  			<%= f.text_area :introduction, class:"form-control introduction", id:"user_introduction" %>
  		</div>
  		<div class="form-group">
            <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
			</div>
			<% end %>
		</div>
	</div>
</div>
