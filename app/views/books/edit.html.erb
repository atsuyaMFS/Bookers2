<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
			<div id="error_explanation">
			<% if @book.errors.any? %>
    	<h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
    	<ul>
    		<% if @book.errors.include?(:title) %>
       		<li>
        		<%= @book.errors.full_messages_for(:title).first %>
      		<% end %>
       		</li>
     		<% if @book.errors.include?(:body) %>
    		<li>
       			<%= @book.errors.full_messages_for(:body).first %>
      		<% end %>
        	</li>
    	</ul>
    	<% end %>
  	</div>
			<h1>Editing Book</h1>
			<%= form_with model: @book, local:true do |f| %>
			<div class="form-group">
				<label for="bookTitle">Title</label></br>
			 	<%= f.text_field :title, autofocus: true, class:"form-control book-title", id:"book-title" %>
			</div>
  		<div class="form-group">
  			<label for="bookOpinion">Opinion</label></br>
  			<%= f.text_area :body, class:"form-control bookBody", id:"bookBody" %>
  		</div>
  		<div class="form-group">
            <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
			</div>
			<% end %>
			<%= link_to 'Show', book_path(@book.id), class: "@user.id" %>
			|
			<%= link_to 'Back', books_path, class: "back" %>
		</div>
	</div>
</div>